<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center">

    <tw.yalan.cafeoffice.views.TypeFaceTextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/tab_member_title_text"
        android:textSize="12sp"
        android:fontFamily="@font/notosanscjktc_medium"
        tools:text="已收藏"/>

    <tw.yalan.cafeoffice.views.TypeFaceTextView
        android:id="@+id/tvCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/padding_4"
        android:textColor="@color/tab_member_count_text"
        android:textSize="12sp"
        android:fontFamily="@font/notosanscjktc_medium"
        tools:text="12"/>
</LinearLayout>